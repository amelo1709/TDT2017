<?xml version='1.0' encoding='utf-8'?>
<Package xmlns="http://schemas.microsoft.com/appx/2010/manifest" xmlns:m2="http://schemas.microsoft.com/appx/2013/manifest">
    <Identity Name="com.registroenlaweb.app" Publisher="CN=$username$" Version="1.0.1.0" />
    <Properties>
        <DisplayName>Registro en la Web</DisplayName>
        <PublisherDisplayName>OnTech Solutions Corp.</PublisherDisplayName>
        <Logo>images\StoreLogo.png</Logo>
        <Description>App diseñada para la captura de Leads en los eventos donde RegistroEnLaWeb.com lleva el control de asistencia.</Description>
    </Properties>
    <Prerequisites>
        <OSMinVersion>6.3.0</OSMinVersion>
        <OSMaxVersionTested>6.3.0</OSMaxVersionTested>
    </Prerequisites>
    <Resources>
        <Resource Language="x-generate" />
    </Resources>
    <Applications>
        <Application Id="com.registroenlaweb.app" StartPage="www/index.html">
            <m2:VisualElements BackgroundColor="#464646" Description="App diseñada para la captura de Leads en los eventos donde RegistroEnLaWeb.com lleva el control de asistencia." DisplayName="Registro en la Web" ForegroundText="light" Square150x150Logo="images\Square150x150Logo.png" Square30x30Logo="images\Square30x30Logo.png">
